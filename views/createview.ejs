<%-include("partials/header.ejs")%>
<div class="form">
    <h2>Write your post here 👇🏽</h2>
    <br>
    <form action="/create" method="post">
        <label class="label">Title</label>
        <br><br>
        <input class="input" type="text" name="postTitle">
        <br><br>
        <label class="label">Content</label>
        <br><br>
        <textarea class="input" cols="30" rows="10" name="postBody"></textarea>
        <br><br>
        <button class="publishBtn" type="submit">Publish</button>
        <br>
    </form>
</div>

<div class="post-container">
    <% if (locals.result) { %>
        <% result.forEach((item) => {%>
            <div class="post-box">
                <h2 class="post-title"><%=item.title%></h2>
                <p class="post-desc"><%=item.desc.slice(0,10)%>...</p>
                <h4><a class="read" href="/post/<%=item.title%>">Read More</a></h4>
                <h4><a class="delete" href="/delete/<%=item.title%>">Delete Post</a></h4>
            </div>
        <% }) %>
    <% } %>
</div>
<br><br><br><br>
<%-include("partials/footer.ejs")%>


    